<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="crm_lead_view_form_contact_fields" model="ir.ui.view">
        <field name="name">crm.lead.view.form.contact.fields</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <!-- Add the display name field -->
            <xpath expr="//sheet" position="before">
                <field name="display_name" invisible="1"/>
            </xpath>
            
            <!-- Fix partner_id (Customer) field visibility and behavior -->
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="string">Customer</attribute>
                <attribute name="placeholder">Select or Create Customer</attribute>
                <attribute name="invisible">0</attribute>
                <attribute name="attrs">{'required': [('type', '=', 'opportunity')]}</attribute>
                <attribute name="options">{'no_create_edit': False, 'no_quick_create': False}</attribute>
                <attribute name="widget">res_partner_many2one</attribute>
            </xpath>
            
            <!-- Make partner_name more prominent -->
            <xpath expr="//field[@name='partner_name']" position="attributes">
                <attribute name="string">Company/Organization</attribute>
                <attribute name="placeholder">Company or Organization Name</attribute>
                <attribute name="invisible">0</attribute>
            </xpath>
            
            <!-- Make contact_name clearer -->
            <xpath expr="//field[@name='contact_name']" position="attributes">
                <attribute name="string">Contact Person</attribute>
                <attribute name="placeholder">Name of Contact Person</attribute>
                <attribute name="invisible">0</attribute>
            </xpath>
            
            <!-- Ensure mobile field is visible -->
            <xpath expr="//field[@name='mobile']" position="attributes">
                <attribute name="string">Mobile</attribute>
                <attribute name="invisible">0</attribute>
            </xpath>
            
            <!-- Make both partner sections visible -->
            <xpath expr="//group[@name='lead_partner']" position="attributes">
                <attribute name="invisible">0</attribute>
                <attribute name="string">Customer Information</attribute>
            </xpath>
            
            <xpath expr="//group[@name='opportunity_partner']" position="attributes">
                <attribute name="invisible">0</attribute>
                <attribute name="string">Customer Details</attribute>
            </xpath>
        </field>
    </record>
</odoo>
